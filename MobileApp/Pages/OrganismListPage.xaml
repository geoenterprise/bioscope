<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MobileApp.Pages.OrganismListPage"
            Title="Organisms">
    <CollectionView ItemsSource="{Binding Organisms}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="12">
                    <Label Text="{Binding CommonName}" FontAttributes="Bold" />
                    <Label Text="{Binding ScientificName}" FontSize="12" />
                    <Label Text="{Binding Category}" FontSize="12" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
