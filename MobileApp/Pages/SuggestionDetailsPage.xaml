<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.SuggestionDetailsPage"
             Title="Suggestion Details">

    <ScrollView >
        <VerticalStackLayout Padding="20" Spacing="10">        
            <Frame Padding="10"
                Margin="5"
                CornerRadius="10"
                BorderColor="LightGray"
                HasShadow="True"
                HorizontalOptions="Fill">
                
                <VerticalStackLayout Spacing="5">
                    <Image Source="{Binding Similar_Images[0].Url}"
                        x:Name="SuggestionImage"
                        Aspect="AspectFill"/>

                    <Label HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding PlantDetails.Common_Names[0]}"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="✅ Scientific Name:: "
                                    FontSize="14"
                                    FontAttributes="Bold" />
                                <Span Text="{Binding PlantDetails.Scientific_Name}"
                                    FontSize="14"
                                    TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="✅ Description: "
                                    FontSize="14" 
                                    FontAttributes="Bold"/>
                                <Span Text="{Binding PlantDetails.Wiki_Description.Value}"
                                    FontSize="14"
                                    TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    
                    <Label Text="✅ Add a note:" FontAttributes="Bold" />
                        <Editor x:Name="CommentEditor"
                                Placeholder="Write your notes here"
                                AutoSize="TextChanges"
                                HeightRequest="80"/>  
                </VerticalStackLayout>     
            </Frame> 
            <!--Buttons-->
            <Button
                Text="Save Discover" 
                SemanticProperties.Hint="Save the plant in your discoveries"
                Clicked="SaveSuggestion"
                HorizontalOptions="Fill" />
    
            <Button
                Text="Cancel" 
                SemanticProperties.Hint="Take the photo again"
                
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView> 
</ContentPage>
