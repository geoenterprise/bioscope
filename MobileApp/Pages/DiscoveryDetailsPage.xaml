<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.DiscoveryDetailsPage"
             Title="Discovery Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Frame Padding="10"
                   Margin="5"
                   CornerRadius="10"
                   BorderColor="LightGray"
                   HasShadow="True"
                   HorizontalOptions="Fill">

                <VerticalStackLayout Spacing="5">
                    <Image Source="{Binding AssetUrl}"
                           x:Name="SuggestionImage"
                           Aspect="AspectFill" />

                    <Label HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding CommonName}"
                                      FontSize="16"
                                      FontAttributes="Bold"
                                      TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="✅ Scientific Name: "
                                      FontSize="14"
                                      FontAttributes="Bold" />
                                <Span Text="{Binding ScientificName}"
                                      FontSize="14"
                                      TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="✅ Description: "
                                      FontSize="14"
                                      FontAttributes="Bold" />
                                <Span Text="{Binding WikiDescription}"
                                      FontSize="14"
                                      TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="💬 Comments"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        Margin="0,10,0,5" />

                    <BoxView HeightRequest="1"
                            Color="LightGray"
                            Margin="0,0,0,10" />

                  
                    <CollectionView x:Name="CommentsList"
                                    ItemsSource="{Binding Comments}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="5"
                                       Margin="5"
                                       CornerRadius="5"
                                       HasShadow="True"
                                       BorderColor="LightGray">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding User.DisplayName}"
                                               FontAttributes="Bold"
                                               FontSize="14" />
                                        <Label Text="{Binding Body}"
                                               FontSize="14" />
                                        <Label Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </VerticalStackLayout>
                                </Frame>
                                
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                  

                    <Label Text="✅ Add a Comment:" FontAttributes="Bold" />
                    <Editor x:Name="CommentEditor"
                            Placeholder="Write your notes here"
                            AutoSize="TextChanges"
                            HeightRequest="80" />
                    <Button
                        Text="Save the Comment" 
                        SemanticProperties.Hint="Save a comment"
                        Clicked="SaveCommentsAsync"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>


            

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
