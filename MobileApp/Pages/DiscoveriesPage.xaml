<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.DiscoveriesPage"
             Title="My Discoveries">

    <ScrollView>
        <VerticalStackLayout Padding="5" Spacing="5">

            <CollectionView x:Name="DiscoveriesCollection"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8"
                               Margin="3"
                               CornerRadius="8"
                               BorderColor="LightGray"
                               HasShadow="True"
                               HorizontalOptions="FillAndExpand">

                            <VerticalStackLayout Spacing="2">
                          
                                <Label Text="{Binding CommonName}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>

                             
                                <Label Text="{Binding ScientificName}"
                                       FontSize="12"
                                       TextColor="Gray"/>

                                <HorizontalStackLayout HorizontalOptions="End"
                                                       Spacing="5">
                                    <Button Text="Details" FontSize="10" Clicked="OnDetailsClick"/>
                                    <Button Text="Update" FontSize="10"/>
                                    <Button Text="Delete" FontSize="10" TextColor="Red"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


