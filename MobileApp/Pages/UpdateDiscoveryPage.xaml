<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.UpdateDescriptionPage"
             Title="Update Description">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Frame Padding="10"
                   Margin="5"
                   CornerRadius="10"
                   BorderColor="LightGray"
                   HasShadow="True"
                   HorizontalOptions="Fill">

                <VerticalStackLayout Spacing="5">
                    <Image Source="{Binding AssetUrl}"
                           x:Name="SuggestionImage"
                           Aspect="AspectFill" />

                    <Label HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding CommonName}"
                                      FontSize="16"
                                      FontAttributes="Bold"
                                      TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="✅ Scientific Name: "
                                      FontSize="14"
                                      FontAttributes="Bold" />
                                <Span Text="{Binding ScientificName}"
                                      FontSize="14"
                                      TextColor="Black" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                   
                    <Label Text="✅ Description:"
                        FontSize="14"
                        FontAttributes="Bold" />

                    <Editor Text="{Binding WikiDescription}"
                            FontSize="14"
                            TextColor="Black"
                            AutoSize="TextChanges"
                            Placeholder="Edita o agrega tus notas aquí..."
                            BackgroundColor="#F3F3F3"
                            HeightRequest="120"
                            Margin="0,5,0,10"/>

                </VerticalStackLayout>
            </Frame>

            <Button
                Text="Update Description" 
                SemanticProperties.Hint="Update Wiki Description field"
                Clicked = "UpdateDescriptionAsync"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
