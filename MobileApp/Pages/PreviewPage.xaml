<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.PreviewPage"
             Title="Preview">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,70"
            Spacing="25">
            
            <Frame Padding="0"
                CornerRadius="15"
                HasShadow="True"
                HeightRequest="300"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <Image x:Name="PreviewImage"
                    Aspect="AspectFit" />
            </Frame>

            <Button
                Text="Look for Suggestions" 
                SemanticProperties.Hint="Confirm to send the image to the AI"
                Clicked="IdentifyClicked"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Review Discoveries" 
                SemanticProperties.Hint="It will display all your discoveries"
                Clicked="DiscoveriesClicked"
                HorizontalOptions="Fill" />
  
            <!-- <Button 
                Text="Get Weather" 
                Clicked="OnGetWeatherClicked"/> -->
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
